// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  email      String   @unique
  password   String
  is_blocked Boolean  @default(false)
  is_deleted Boolean  @default(false)
  role       Role     @default(USER)
  drafts     Draft[]
}

model Post {
  id             Int             @id @default(autoincrement())
  created_at     DateTime        @default(now())
  updated_at     DateTime        @updatedAt
  title          String
  body           String?
  media          String?
  is_draft       Boolean         @default(false)
  is_active      Boolean         @default(true)
  is_deleted     Boolean         @default(false)
  tags           Tag[]
  draft          Draft           @relation(fields: [draft_id], references: [id])
  draft_id       Int
  advertisements Advertisement[]
  news_source    News_source     @relation(fields: [news_source_id], references: [id])
  news_source_id Int
}

model Draft {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  post_id    Int
  user_id    String
  user       User     @relation(fields: [user_id], references: [id])
  Post       Post[]
}

model Advertisement {
  id                  Int      @id @default(autoincrement())
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt
  is_active           Boolean  @default(false)
  is_deleted          Boolean  @default(false)
  company             String?
  title               String?
  content             String?
  image_backdrop_path String?
  allowed_ad_per_page Int?
  post_id             Int?
  post                Post?    @relation(fields: [post_id], references: [id])
}

model News_source {
  id               Int      @id @default(autoincrement())
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt
  name             String   @unique
  is_active        Boolean  @default(false)
  is_deleted       Boolean  @default(false)
  url              String   @unique
  title_included   Boolean  @default(true)
  content_included Boolean  @default(false)
  pubDate_included Boolean  @default(false)
  is_linkable      Boolean  @default(false)
  creator_included Boolean  @default(false)
  import_interval  Int      @default(5)
  tags             Tag[]
  Post             Post[]
}

model Tag {
  id          Int           @id @default(autoincrement())
  created_at  DateTime      @default(now())
  updated_at  DateTime      @default(now()) @updatedAt
  label       String        @unique
  is_active   Boolean       @default(true)
  is_deleted  Boolean       @default(false)
  post        Post[]
  news_source News_source[]
}
